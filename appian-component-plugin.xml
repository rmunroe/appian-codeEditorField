<?xml version="1.0"?>
<appian-component-plugin name="Code Editor Field" key="com.robmunroe.codeEditor">
  <plugin-info>
    <description>Provides a code editor field component for SAIL</description>
    <vendor name="Appian" url="appian.com"/>
    <version>1.0.0</version>
    <support supported="false"/>
  </plugin-info>
  <component rule-name="codeEditorField" version="1.0.0">
    <sdk-version>2.0.0</sdk-version>
    <supported-user-agents>chrome firefox ie11 edge safari mobile</supported-user-agents>
    <icon-file>code-json.svg</icon-file>
    <parameter>
      <name>readOnly</name>
      <category>input-only</category>
      <type>Boolean</type>
    </parameter>
    <parameter>
      <name>marginBelow</name>
      <category>input-only</category>
      <type>
        <enum>
          <choice>NONE</choice>
          <choice>STANDARD</choice>
        </enum>
      </type>
    </parameter>
    <parameter>
      <name>mode</name>
      <category>input-only</category>
      <type>
        <enum>
          <choice>javascript</choice>
          <choice>json</choice>
        </enum>
      </type>
    </parameter>
    <parameter>
      <name>text</name>
      <category>input-output</category>
      <type>Text</type>
    </parameter>
    <html-entry-point>index.html</html-entry-point>
  </component>
</appian-component-plugin>